{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "api-basic",
  "version": "1.0.0",
  "description": "Api Rest Full Dynamic",
  "main": "./dist/server.js",
  "scripts": {
    "start": "node dist/server.js && echo \"✅ Proceso realizado con éxito.\"",
    "bdist": "clear && rmdir /s dist && echo \"🔍 Clearing...\" && echo \"✅ Borrado realizado con éxito.\" && pnpm build && echo \"🔍 Actualizando Assets...\" && cp -r src/asset dist && echo \"✅ Actualizo Asset.\"",
    "build": "echo \"🔍 Building...\" && tsc && echo \"✅ Build realizado con éxito.\"",
    "dev": "tsc && concurrently \"tsc -w\" \"nodemon server.js\"",
    "watch": "tsc && concurrently \"tsc -w\" \"node --watch dist/server.js\"",
    "prod": "SET NODE_ENV=production && pnpm start && echo \"✅ Proceso realizado con éxito.\"",
    "test": "clear && echo \"✅ Proceso por implementar.\""
  },
  "keywords": [
    "backend",
    "api",
    "api basic",
    "express",
    "node",
    "typescript"
  ],
  "author": {
    "name": "Dc Dev -> David Coach Dev.",
    "email": "dcdevtk@gmail.com",
    "url": "https://dcdev.tk"
  },
  "license": "MIT",
  "dependencies": {
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "mysql": "^2.18.1",
    "reflect-metadata": "^0.1.13",
    "swagger-jsdoc": "6.2.8",
    "swagger-ui-express": "^4.6.3",
    "typeorm": "^0.3.17",
    "typeorm-naming-strategies": "^4.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.4.5",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@vercel/node": "^2.15.6",
    "concurrently": "^8.2.0",
    "eslint": "^8.46.0",
    "eslint-config-standard-with-typescript": "^37.0.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "morgan": "^1.10.0",
    "nodemon": "^3.0.1",
    "pre-commit": "^1.2.2",
    "rimraf": "^5.0.1",
    "typescript": "^5.1.6"
  }
}
